<%- include('partials/header') %>
<div class="home">

    <ul class="list-group mt-5 mb-5" style="text-align: center;">
        <% if(mails.length!= 0) {%> 
            <% mails.forEach(mail=>{ %>
                <% for(i=0;i<mail.to.length;i++) {%> 
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-2  first">
                                <img
                                    src="data:image/png;base64," />
                                <h5><%= mail.to[i] %> </h5>
                            </div>
                            <div class="col-md-8  second">
                                <%= mail.content %> 
                            </div>
                            <div class="col-md-2 third">
                                <a href="/delete/<%= mail.userid %>/">Delete</a>
                            </div>
                        </div>
                    </li>
                <% } %> 
           <% }) %> 
        <% }else {%> 
            <h2>No History!!!</h2>
        <% } %> 
    </ul>
</div>

<%- include('partials/footer') %>
